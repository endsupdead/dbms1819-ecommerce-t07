<div class="container">
  <div class="jumbotron mt-2">
    <h1 class="mt-0 mb-5 text-center">Product list</h1>
    <div class="row mx-4">
      {{#each data}}
      <div class="col-lg-4 col-md-4 col-sm-12 mb-4 mx-auto">
        <div class="card bg-secondary text-light center">
          <a href="/products/{{this.id}}" class="text-light">
            <img class="card-img-top" src="{{this.picture}}" style="width:300px;height:200px;">
            <div class="">
                <h6 class="card-title text-center my-3">{{this.brand}} {{this.model_name}}</h5>
            </div>
          </a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

