<div class="container">
    <div class="jumbotron mt-2">
    <h1 align="center">Date</h1>
        <div class="col-lg-8 col-md-8 col-sm-8 mb-2 mx-auto">
             <div class="card bg-secondary text-light center">
                  <div class="card-body">
                     <script src="moment.js"></script>
                    <h6 class="card-title" name="purchase_date">{{moment format="MMMM DD, YYYY, hh:mm:ss a"}}</h6>
                </div>
             </div>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8 mb-2 mx-auto">
             <div class="card bg-secondary text-light center">
                  <div class="card-body">
                     <h1>Moment.js here now: <span id="then" data-date="Sat Mar 24 2012 08:42:14 GMT+0800 (EDT)"></span></h1>
    
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="/js/moment.js"></script>
    <script>
      $(document).ready(function(){
        var then = $('#then'),
            date = moment(new Date(then.attr('data-date'))),
            update = function(){
                       then.html(date.fromNow());
                     };
        
        update();
        setInterval(update, 60000);
      });
    </script>
             </div>
        </div>
    </div>
</div>


    