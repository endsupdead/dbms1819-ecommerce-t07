{{>title_home}}
{{> nav_admin }}



<div class="container">
  <div class="jumbotron mt-2">
    <h3 align="center">Customers</h3>
    {{!-- {{#each rows}} --}}
      <div class="col-lg-8 col-md-8 col-sm-8 mb-2 mx-auto">
        <div class="card bg-secondary text-light center">
          <div class="card-body">
            <h6 class="card-title">First name:     {{first_name}}</h6>
            <h6 class="card-title">Last name:      {{last_name}}</h6>
            <h6 class="card-title">E-mail:         {{email}}</h6>
            <h6 class="card-title">Street:         {{street}}</h6>
            <h6 class="card-title">City:           {{city}}</h6>
            <h6 class="card-title">State:          {{state}}</h6>
            <h6 class="card-title">Zip Code:       {{zipcode}}</h6>
          </div>
        </div>
      </div>
    {{!-- {{/each}} --}}
    <h3 align="center">Orders</h3>
    {{#each rows}}
      <div class="col-lg-8 col-md-8 col-sm-8 mb-2 mx-auto">
        <div class="card bg-secondary text-light center">
          <div class="card-body">
            <h6 class="card-title">Ordered Product:     {{model_name}}</h6>
            <h6 class="card-title">Quantity:            {{quantity}}</h6>
            <h6 class="card-title">Price:            â‚±  {{number price}}.00</h6>
            {{!-- <h6 class="card-title">Order Date: {{moment purchase_date utc=true add='hours' amount='8' format="llll"}} UTC</h6> --}}
            <h6 class="card-title">Order Date:          {{moment purchase_date local=true add='hours' amount='8' format="llll"}}</h6>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

{{> footer }}