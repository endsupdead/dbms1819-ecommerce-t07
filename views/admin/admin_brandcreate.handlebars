{{> title_home }}
{{> nav_admin }}

<div class="container">
  <div class="jumbotron mt-2">
    <h3 align="center">Brands</h3>
    {{#each rows}}
      <div class="col-lg-8 col-md-8 col-sm-8 mb-2 mx-auto">
        <div class="card bg-secondary text-light center">
          <div class="card-body">
            <h3 class="card-title">{{this.brand_name}}</h3>
            <p class="card-text">
              <h7 class="card-title">{{this.brand_description}}</h7>
            </p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<div class="container" style="margin-top: 10px;">
  <div class="jumbotron mt-2">
    <h3>Create Brand</h3>
    <form method="POST" action="/adminbrandcreate">
      <div class="controls">
        <div class="form-group">
          <label class="control-label" for="brand_name">Brand Name *</label>
          <div>
            <input id="brand_name" name="brand_name" type="text" placeholder="Brand name" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="brand_description">Description *</label>
          <div>
            <textarea id="brand_description" name="brand_description" placeholder="Description" rows='8' class="form-control" required=""></textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg" title="Submit contact form">
            Create Brand
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
{{> footer }}