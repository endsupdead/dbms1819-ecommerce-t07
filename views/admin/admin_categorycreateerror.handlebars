<head>
  {{>title_home}}
</head>

  {{> nav_admin }}

<script>
function myFunction() {
    alert("Category already exists!");
}
</script>
<script src="node_modules/alert-js/alert.min.js"></script>
<script src="node_modules/ripple-js/ripple.min.js"></script>

<body onload="myFunction()">
<div class="container">
  <div class="jumbotron mt-2">
    <h2 align="center">Categories</h2>
    {{#each rows}}
      <div class="col-lg-8 col-md-8 col-sm-8 mb-2 mx-auto">
        <div class="card bg-secondary text-light center">
          <div class="card-body">
            <h4 class="card-title">{{this.category_name}}</h4>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>


<div class="container" style="margin-top: 10px;">
  <div class="jumbotron mt-2">
    <h2>Create Category</h2>
    
    <form method="POST" action="/admincategorycreate">
      <div class="controls">
              <div class="form-group">
                      <label class="control-label" for="category_name">Category Name *</label>
                      <div class="bruh">
                        <input id="category_name" name="category_name" type="text" placeholder="Gaming" class="form-control" required="">
                      </div>
              </div>
        <div class="form-group">
                      <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg" title="Submit category form">
                          Submit
                        </button>
                      </div>
        </div>
      </div>
    </form>
  </div>
</div>
</body>
{{> footer }}
