{{> title_home}}
{{> nav_admin }}

<div class="container">
    <div class="jumbotron mt-2">
    <h3 align="center">Ali top top</h3><hr>
        <div class="row">
            <div class="col-md-5" style="margin: 0 40px">
            <h5 align="center">Top 10 Customers with Most No. of Orders</h5>
                <div class="row justify-content-center">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th>Customer</th>
                                <th>Number of Orders</th>
                             </tr>
                        </thead>
                        <tbody>
                            {{#each topCustomersMostOrders}}
                            <tr>
                                <td>{{this.first_name}}  {{this.last_name}}</td>
                                <td>{{this.count}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-5" style="margin: 0 40px">
            <h5 align="center">Top 10 Customers with Highest Payment</h5>
                <div class="row justify-content-center">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                {{!-- <th>#</th> --}}
                                <th>Customer</th>
                                <th>Total Payment</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each topCustomersHighestPayment}}
                            <tr>
                                {{!-- <td>{{this.}}</td> --}}
                                <td align="left">{{this.first_name}}  {{this.last_name}}</td>
                                <td align="left">Php {{number this.sum}}.00</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
<hr>
        <div class="row">
            <div class="col-md-5" style="margin: 0 40px">
            <h5 align="center">Top 10 Most Ordered Products</h5>
                <div class="row justify-content-center">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th>Model Name</th>
                                <th>Number of Orders</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each topProductsMostOrdered}}
                            <tr>
                                <td>{{this.name}}</td>
                                 <td>{{this.count}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-5" style="margin: 0 40px">
            <h5 align="center">Top 10 Least Ordered Products</h5>
                <div class="row justify-content-center">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th>Model Name</th>
                                <th>Number of Orders</th>
                             </tr>
                        </thead>
                        <tbody>
                            {{#each topProductsLeastOrdered}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this.count}}</td>
                             </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

<hr>
        <div class="row">
            <div class="col-md-5" style="margin: 0 40px">
            <h5 align="center">Total Sales </h5>
                <div class="row justify-content-center">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th>For the Last 7 days</th>
                                <th>For the Last 30 days</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Php {{salesLast7days}}.00</td>
                                <td>Php {{salesLast30days}}.00</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-5" style="margin: 0 40px">
            <h5 align="center">Daily Order Counts</h5>
                <div class="row justify-content-center">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th>Order Count in the Last 7 days</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{OrderCountLast7days}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer }}