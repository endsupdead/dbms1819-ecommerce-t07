<head>
  {{>title_home}}
</head>
<nav class="navbar fixed-top navbar-expand-sm navbar-light bg-light">
  {{> admin_nav }}
</nav>


<div class="container">
  <div class="jumbotron mt-2">
    <h1 align="center">Categories</h1>
    {{#each rows}}
      <div class="col-lg-8 col-md-8 col-sm-8 mb-2 mx-auto">
        <div class="card bg-secondary text-light center">
          {{!-- <img class="card-img-top" src="{{this.pic}}" alt=""> --}}
          <div class="card-body">
            <h4 class="card-title">{{this.category_name}}</h4>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>


<div class="container pb-5 mb-5">
  <div class="jumbotron mt-2">
    <h2>Create Category</h2>
    <form method="POST" action="/insertcategory">
      <div class="controls">
        <div class="form-group">
          <label class="control-label" for="category_name">Category Name *</label>
          <div>
            <input id="category_name" name="category_name" type="text" placeholder="Gaming" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg" title="Submit category form">
              Submit
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<footer>{{> footer }}</footer>