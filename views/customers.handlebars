<div class="container">
	<div class="jumbotron mt-2">
		<h1 align="center">Customers</h1>
		{{#each rows}}
			<div class="col-lg-8 col-md-8 col-sm-8 mb-2 mx-auto">
				<div class="card bg-secondary text-light center">
					<div class="card-body">
						<h5 class="card-title"> Name: {{this.first_name}} {{this.last_name}}</h5>
						<h6 class="card-title">E-mail: {{this.email}}</h6>
						<a href="/customer/{{this.id}}" style="color: #ffffff">Click here for more details</a>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
</div>