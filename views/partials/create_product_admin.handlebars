<div class="container">
  <div class="jumbotron mt-2">
    <h2>Create Product</h2>
    <form method="POST" action="/insertproduct">
      <div class="controls">
        <div class="form-group">
          <label class="control-label" for="model_name">Model Name *</label>
          <div>
            <input id="model_name" name="model_name" type="text" placeholder="Model Name" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="category">Product Category *</label>
          <div class="text-center">
            <select id="category_id" name="category_id" class="form-control" required="">
            {{#each rows.[1]}}
              <option value="{{this.id}}">{{this.category_name}}</option>
             {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="specification">Product Description *</label>
          <div>
            <input id="specification" name="specification" type="text" placeholder="Specifications" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="price">Price *</label>
          <div>
            <input id="price" name="price" type="number" placeholder="80000" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="pic">Picture link *</label>
          <div>
            <input id="picture" name="picture" type="text" placeholder="/name.png or imageurl" class="form-control" required="">
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label" for="brand">Brand *</label>
          <div class="text-center">
            <select id="brand_id" name="brand_id" class="form-control" required="">
            {{#each rows.[0]}}
              <option value="{{this.id}}">{{this.brand_name}}</option>
             {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group">
          <div class="text-center">
            <button type="submit" class="btn btn-primary btn-medium">Add Product</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>